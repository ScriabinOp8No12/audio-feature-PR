.warning-system-messages-message-severity {
    padding-right: 0.5em;
    padding-left: 0.5em;
}

.warning-system-messages-message-text {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 100%;
    display: inline-block;
    box-sizing: border-box;
}

.warning-system-messages-message {
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 0.25rem;
    transition: background-color 0.2s ease;

    &:hover {
        themed: background-color shade4;
    }
}
