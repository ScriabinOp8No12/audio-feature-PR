{
    "compileOnSave": false,
    "buildOnSave": false,
    "compilerOptions": {
        "target": "es2022",
        "module": "node16",
        "outDir": "./engine/build/",
        "moduleResolution": "node16",
        "esModuleInterop": true,
        "removeComments": false,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es2023", "dom"],
        "baseUrl": ".",
        "paths": {
            "*": ["src/*", "*"],
            "engine": ["src/engine"],
            "goscorer": ["src/third_party/goscorer/goscorer"]
        },
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "jsx": "react"
    },
    "files": ["./src/engine/index.ts"]
}
